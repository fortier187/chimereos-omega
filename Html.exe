<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ChimereOS Oméga</title>
  <style>
    :root{--bg:#071018;--panel:#0f1720;--neon:#00d1ff;--muted:#9fb3bd}
    *{box-sizing:border-box}
    body{margin:0;background:var(--bg);color:#cfeaf6;font-family:Arial,Helvetica,sans-serif}
    .app{max-width:1200px;margin:0 auto;padding:18px}
    .header{display:flex;justify-content:center;margin-bottom:12px}
    .title{color:var(--neon);font-weight:700;letter-spacing:2px}
    .layout{display:flex;gap:12px;flex-wrap:wrap}
    .panel{flex:1 1 300px;background:linear-gradient(180deg,rgba(255,255,255,0.02),transparent);border-radius:8px;padding:14px;border:1px solid rgba(0,209,255,0.06)}
    h2{color:var(--neon);margin:0 0 10px 0;font-size:13px}
    ul{list-style:none;padding:0;margin:0}
    li.item{display:flex;align-items:center;gap:10px;padding:8px;border-radius:6px;margin-bottom:8px;cursor:pointer}
    .icon{width:36px;height:36px;border-radius:6px;background:linear-gradient(135deg,#02202a,#00313a);display:flex;align-items:center;justify-content:center;color:var(--neon);font-weight:700}
    .muted{color:var(--muted);font-size:13px}
    .tools-row{display:flex;gap:8px;align-items:center;margin-bottom:8px}
    #tools-search{flex:1;padding:8px;border-radius:6px;border:1px solid rgba(0,209,255,0.06);background:transparent;color:var(--neon)}
    .tool-sort{background:transparent;border:1px solid rgba(0,209,255,0.06);color:var(--neon);padding:6px 8px;border-radius:6px;cursor:pointer}
    .tools-grid{display:flex;flex-wrap:wrap;gap:8px}
    .tool-btn{display:flex;align-items:center;gap:8px;padding:8px 10px;border-radius:6px;border:1px solid rgba(0,209,255,0.06);background:linear-gradient(135deg,#02202a,#00313a);color:var(--neon);font-size:12px;cursor:pointer}
    .tool-icon{width:28px;height:28px;border-radius:4px;flex:0 0 28px;display:flex;align-items:center;justify-content:center;background:#001a22;color:var(--neon);font-weight:700}
    .overlay{position:fixed;inset:0;background:rgba(2,6,10,0.75);display:none;align-items:center;justify-content:center;padding:18px;z-index:50}
    .overlay.open{display:flex}
    .card{background:#071018;padding:16px;border-radius:8px;max-width:520px;width:100%;border:1px solid rgba(0,209,255,0.06)}
    .close{position:absolute;top:18px;right:18px;background:transparent;border:0;color:#fff;font-size:20px;cursor:pointer}
    @media (max-width:720px){.layout{flex-direction:column}.panel{flex:1 1 auto}}
  </style>
</head>
<body>
  <div class="app">
    <div class="header"><div class="title">CHIMEREOS OMÉGA</div></div>
    <div class="layout">
      <div class="panel"><h2>MODES</h2><ul id="modes"></ul></div>
      <div class="panel"><h2>STATUS</h2><div class="muted">Cockpit prêt — interaction tactile activée.</div></div>
      <div class="panel">
        <h2>OMEGA EXPLORER</h2>
        <ul id="volumes"></ul>
        <div class="muted" id="device-info" style="margin-top:10px"></div>
        <h2 style="margin-top:12px">OUTILS (placeholders)</h2>
        <div class="tools-row">
          <input id="tools-search" type="search" placeholder="Rechercher un outil..." />
          <button id="sort-az" class="tool-sort">A→Z</button>
          <button id="sort-za" class="tool-sort">Z→A</button>
        </div>
        <div id="tools-list" class="tools-grid"></div>
      </div>
    </div>
  </div>

  <div id="overlay" class="overlay">
    <div class="card" id="overlay-card"></div>
    <button class="close" id="close-overlay">✕</button>
  </div>

  <script>
    const data = {
      modes:["MINIMAL","DEV","CLOUD","GAMING","MULTIMÉDIA"],
      volumes:{"/home":"211.8 GB","cloud":"1.6 TB","gaming":"120 GB"},
      device:{type:"iPhone 14 Pro",imei:"98765432109875",os:"iOS 17.1",storage:"128 GB",battery:"65% (En charge)"},
      tools:[
        "AMT - MULTI TOOL","BORNEO","MUSLIM ODIN","A.N TOOL","HYDRA","HONOR FRP KEY","SIGMA",
        "AMEER TOOL (GSMUNBRICK)","DZKJ","Z3X BOX","ARAB FRP","DFT PRO","GLOBAL AUTH TOOL",
        "JCID","APPLE SERVICES","DRAGON","SAMSUNG SERVICES","miracle box - MB"
      ]
    };

    const modesEl = document.getElementById('modes');
    data.modes.forEach(m=>{
      const li = document.createElement('li'); li.className='item';
      li.innerHTML = `<div class="icon">M</div><div>${m}</div>`;
      li.onclick = ()=>openOverlay(`<strong>${m}</strong><p>Mode actif : ${m} (mock)</p>`);
      modesEl.appendChild(li);
    });

    const volsEl = document.getElementById('volumes');
    Object.entries(data.volumes).forEach(([k,v])=>{
      const li = document.createElement('li'); li.className='item';
      li.innerHTML = `<div class="icon">V</div><div><strong>${k}</strong><div class="muted">${v}</div></div>`;
      li.onclick = ()=>openOverlay(`<strong>${k}</strong><p>Usage : ${v}</p>`);
      volsEl.appendChild(li);
    });

    const devInfo = document.getElementById('device-info');
    devInfo.innerHTML = `<strong>${data.device.type}</strong><div class="muted">${data.device.os} · ${data.device.storage} · Batterie ${data.device.battery}</div><div class="muted" style="font-size:12px">IMEI: ${data.device.imei}</div>`;

    const toolsList = document.getElementById('tools-list');
    const searchInput = document.getElementById('tools-search');
    const sortAZ = document.getElementById('sort-az');
    const sortZA = document.getElementById('sort-za');
    let currentOrder = 'az';

    function renderTools(filter='', order='az'){
      toolsList.innerHTML = '';
      const q = filter.trim().toLowerCase();
      let list = data.tools.filter(name => name.toLowerCase().includes(q));
      list.sort((a,b)=> order==='az' ? a.localeCompare(b,'fr') : b.localeCompare(a,'fr'));
      list.forEach(name=>{
        const btn = document.createElement('button'); btn.className='tool-btn';
        const letter = (name.match(/\b\w/gi)||['?'])[0].toUpperCase();
        btn.innerHTML = `<div class="tool-icon">${letter}</div><div>${name}</div>`;
        btn.onclick = ()=>openOverlay(`<strong>${name}</strong><p>Fiche info (mock)</p><p style="margin-top:8px;font-size:12px;color:#9fb3bd">Note : entrée visuelle mock, aucune fonctionnalité réelle.</p>`);
        toolsList.appendChild(btn);
      });
    }

    renderTools();

    searchInput.addEventListener('input', e => renderTools(e.target.value, currentOrder));
    sortAZ.addEventListener('click', () => { currentOrder = 'az'; renderTools(searchInput.value, currentOrder); });
    sortZA.addEventListener('click', () => { currentOrder = 'za'; renderTools(searchInput.value, currentOrder); });

    const overlay = document.getElementById('overlay');
    const overlayCard = document.getElementById('overlay-card');
    const closeBtn = document.getElementById('close-overlay');

    function openOverlay(html){
      overlayCard.innerHTML = html;
      overlay.classList.add('open');
    }

    closeBtn.onclick = () => overlay.classList.remove('open');
    overlay.addEventListener('click', e => { if(e.target === overlay) overlay.classList.remove('open'); });
  </script>
</body>
</html>
